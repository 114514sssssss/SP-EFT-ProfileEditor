<mah:MetroWindow x:Class="SP_EFT_ProfileEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:SP_EFT_ProfileEditor"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="2"
        SaveWindowPosition="True"
        Title="SP EFT Profile Editor by SkiTles" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <local:PathBoolConverter x:Key="PathBoolConverter" />
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tabControl" Margin="10,5,10,10">
            <TabItem Header="{Binding locale[tab_info_title]}" x:Name="tabinfo">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="{Binding locale[tab_quests_title]}" x:Name="tabquests">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="questsGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Торговец" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Path=trader}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Название" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Path=name}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Статус" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Path=status}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="{Binding locale[tab_serversettings_title]}" x:Name="tabsettings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Border x:Name="SettingsBorder" Background="{DynamicResource MahApps.Brushes.Accent4}" BorderThickness="1">
            <Border Margin="200,80" BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1" Background="{DynamicResource MahApps.Brushes.Window.Background}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="{Binding locale[tab_settings_title]}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="{Binding locale[tab_settings_lang]}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="langSelectBox" Grid.Column="2" Grid.Row="1" Margin="10,5,10,0" VerticalAlignment="Center" SelectedValuePath="Key" DisplayMemberPath="Value" SelectionChanged="langSelectBox_SelectionChanged" />
                    <Label Grid.Column="0" Grid.Row="2" Content="{Binding locale[tab_settings_server]}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <Label  Grid.Column="1" Grid.Row="2" Foreground="Red" Visibility="{ Binding options.EftServerPath, Converter={StaticResource PathBoolConverter}}" ToolTip="{Binding locale[invalid_server_location_text]}" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconFontAwesome Kind="ExclamationTriangleSolid" Width="24" Height="24"/>
                    </Label>
                    <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0" >
                        <TextBox x:Name="serverPath" TextWrapping="Wrap" Text="{Binding options.EftServerPath}" IsEnabled="False"/>
                        <Button x:Name="serverSelect" Content="Select" Margin="5,0,0,0" Click="serverSelect_Click"/>
                    </StackPanel>
                    <Label Grid.Column="0" Grid.Row="3" Content="{Binding locale[tab_settings_account]}" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
                    <ComboBox x:Name="profileSelectBox" Grid.Column="2" Grid.Row="3" Margin="10,5,10,0" VerticalAlignment="Center" ItemsSource="{Binding Profiles}" SelectedItem="{Binding options.DefaultProfile}" SelectionChanged="profileSelectBox_SelectionChanged"/>
                </Grid>
            </Border>            
        </Border>
    </Grid>
</mah:MetroWindow>